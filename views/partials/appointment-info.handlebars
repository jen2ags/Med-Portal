<article class="post">
  <div class="title">
    {{title}}
  </div>
  <div class="meta">
    {{date}}
    {{time}}
    by
    {{user.username}}
    on
    {{format_date created_at}}

    <a href="/note/{{id}}">{{notes.length}}
      {{format_plural "note" notes.length}}</a>
  </div>
</article>
<div class="tile is-parent">
  <article class="tile is-child box">
    <p class="title" class="patient-one" id="patient">Patient Name</p>
    <p class="subtitle" class="doctor-one" id="doctor">Doctor Name</p>
    <button type="submit" class="button my-2 py-2">Add Notes</button>
    <a class="cancel-appointment" id="delete">Cancel Appointment</a>
  </article>
</div>